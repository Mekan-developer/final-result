# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.{js,ts,vue}]
indent_style = space
indent_size = 4

# HTML specific settings
[*.html]
max_line_length = off
indent_style = space
indent_size = 4

# Vue specific settings
[*.vue]
max_line_length = off
indent_style = space
indent_size = 4

# CSS and SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2
